{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/light-node",
      "args": [
        "--config-file",
        "./etc/tezedge/tezedge.config"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/light_node",
      "environment": [{"name": "LD_LIBRARY_PATH", "value": "../tezos/interop/lib_tezos/artifacts"}],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(lldb) Launch",
      "type": "lldb",
      "sourceLanguages": ["rust"],
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/light-node",
      "args": [
        "--tezos-data-dir", "/tmp/tezedge/tezos-node",
        "--bootstrap-db-path", "/tmp/tezedge/light-node",
        "--identity-file", "${workspaceFolder}/light_node/etc/tezedge/identity.json",
        "--protocol-runner", "${workspaceFolder}/target/debug/protocol-runner",
        "--network", "mainnet",
        //"--p2p-port", "9732",
        //"--rpc-port", "18732",
        "--config-file", "${workspaceFolder}/light_node/etc/tezedge/tezedge.config"
      ],
      "cwd": "${workspaceFolder}/light_node",
      "env": {
        "LD_LIBRARY_PATH": "${workspaceFolder}/tezos/interop/lib_tezos/artifacts:${workspaceFolder}/target/debug"
      }
    }
  ]
}